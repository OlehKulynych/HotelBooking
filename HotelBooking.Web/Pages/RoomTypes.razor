@page "/RoomTypes"
@using HotelBooking.Shared.DTO;
@inherits RoomTypesBase

<div class="@GetElementStyle()">
    <Message @ref="@message" message="@messageText" Type="@messageType"></Message>

</div>


@if (roomTypes != null)
{
    if(roomTypes.Count() > 0)
    {
        <h3 class="text-center title-text mb-1">Room Types: </h3>

        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card shadow-lg">
                        <div class="card-body p-4">

                            @foreach (RoomTypeDto roomType in roomTypes)
                            {
                                <h4 style="font-size: 15px"><strong>Name: </strong> <a style="text-decoration:none" href="/Room/RoomsByType/@roomType.Id">@roomType.Name</a> </h4>
                                <AuthorizeView Roles="ADMIN">

                                    <Authorized>
                                        <div class="d-grid gap-2 mt-3">
                                            <a class="btn btn-edit" href="/RoomType/EditRoomType/@roomType.Id"> <i class="mdi mdi-pencil me-2"></i> Edit Type</a>
                                            <button @onclick="async() => await DeleteCategory(roomType.Id)" class="btn btn-secondary btn-delete buttonText"><i class="mdi mdi-plus-box"></i> Delete @roomType.Id</button>                                           
                                        </div>
                                    </Authorized>
                                </AuthorizeView>

                                <hr />
                            }




                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="mt-5 col-xs-1 center-block text-center">
                <h3 style="font-family:'Anton';" class="">Empty</h3>
            </div>
        </div>
    }
   
}
else
{
    <div class="row">
        <div class="mt-5 col-xs-1 center-block text-center">
            <h3 style="font-family:'Anton';">
                <div class="spinner-border text-secondary me-2" role="status">
                    <span class="visually-hidden">Loading</span>
                </div>Loading...
            </h3>
        </div>
    </div>
}
