@page "/Room/RoomsByType/{Id:int}"
@using HotelBooking.Shared.DTO;
@inherits RoomByTypeBase


<div class="@GetElementStyle()">
    <Message @ref="@message" message="@messageText" Type="@messageType"></Message>

</div>


<h3 class="text-center title-text">Room: @typeDto.Name</h3>



@if (Rooms == null)
{
    <div class="row">
        <div class="mt-5 col-xs-1 center-block text-center">
            <h3 style="font-family:'Anton';">
                <div class="spinner-border text-secondary me-2" role="status">
                    <span class="visually-hidden">Loading</span>
                </div>Loading...
            </h3>
        </div>
    </div>

}
else
{
    var count = Rooms.Count();
    if (count > 0)
    {
        <div class="container h-100">
            <div class="row h-100 justify-content-center align-items-center">

                @{
                    
                    <DisplayRoom Rooms="@Rooms">
                    </DisplayRoom>
                }
            </div>

        </div>


    }
    else
    {
        <div class="row">
            <div class="mt-5 col-xs-1 center-block text-center">
                <h3 style="font-family:'Anton';" class="">Empty</h3>
            </div>
        </div>
    }
}